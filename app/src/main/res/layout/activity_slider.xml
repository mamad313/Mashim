<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:paddingBottom="16dp"
    android:weightSum="300"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.SliderDetailActivity"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:weightSum="300"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        app:cardCornerRadius="8dp"
        app:contentPadding="8dp"
        app:cardBackgroundColor="#E8E0F6">

        <LinearLayout
            android:weightSum="300"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="left">

            <TextView
                android:id="@+id/photo_author_slider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#454545"
                android:layout_margin="8dp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:text="TextView"/>

            <ImageView
                android:id="@+id/photo_image_Slider"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/placeholder" />



            <TextView
                android:id="@+id/photo_tags_slider"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#454545"
                android:text="TextView"
                android:textSize="12sp"/>


        </LinearLayout>

<!--        <androidx.viewpager2.widget.ViewPager2-->
<!--            android:id="@+id/recycler_test"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent" />-->
    </androidx.cardview.widget.CardView>



</LinearLayout>

